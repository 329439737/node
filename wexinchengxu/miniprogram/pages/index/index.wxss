/* miniprogram/pages/index/index.wxss */
.index-swiper{margin:100rpx 20rpx 30rpx 20rpx;height:300rpx ;overflow: hidden;}
.index-swiper image{width: 100%;border-radius: 10rpx;overflow: hidden;}
.index-tab{
  display: flex;
}
.index-tab view{flex: 1; text-align: center;padding: 10rpx;margin:10rpx;}
.index-tab view.active{
  border-bottom: 1px red solid;color: red;
}
.index-list{
  display: flex;flex-wrap: wrap;
}
.index-list-item{
  width: 50%;
  margin-top: 10rpx;
}
.index-list-item image{
  width: 90%;height: 250rpx;margin: 0 auto ;display: block;border-radius: 10rpx;
}
.index-list-text{
  width: 90%;margin: 0 auto;display: flex;justify-content: space-between;margin-top: 2rpx;color: pink;
}
.goods{
  margin-top: 50rpx;box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.10);
}
.goods text{
  color: pink;padding-left: 50rpx;
}
.goods view{
  margin-top: 10rpx;
}
.mai{
  float: right;margin-right: 50rpx;
}
.vx{
  padding-bottom: 30rpx;
}


